<div class="col-sm-10 col-sm-offset-1">
  <div class="nexttrail">
    <% if @next.present? %>
      <h3>Next Trail:</h3>
      <%= link_to @next.name, @next %>, <%= @next.startdate %><br />
      <% if @next.prelube.present? %>
        Prelube: <%= link_to @next.prelube.name, @next.prelube.location %><br />
      <% end %>
      When: <%= @next.startdate %>, <%= @next.starttime %>
    <% else %>
      Nothing here yet
    <% end %>
  </div>
</div>